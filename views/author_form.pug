extends layout 

block content 
    h1= title 

    form(method='POST' action='')
        .form-group 
            label(for='first_name') First Name:
        .form-group 
            input#first_name.form_control(type='text' placeholder='First name (Christian)' name='first_name' value =(author == undefined ? '' : author.first_name))
        .form-group 
            label(for='last_name') Last Name:
        .form-group 
            input#family_name.form_control(type='text' placeholder='Last name (surname)' name='family_name' value =(author == undefined ? '' : author.family_name))
        .form_group
            label(for='date_of_birth') Date of Birth:
        .form-group 
            input#date_of_birth.form_control(type='date' name='date_of_birth' value=(author === undefined ? '' : author.date_of_birth) placeholder='dd/mm/yyyy')
        .form-group 
            label(for='date_of_death') Date of Death:
        .form-group 
            input#date_of_death.form_control(type='date' name='date_of_death' value=(author === undefined ? '' : author.date_of_death) placeholder='dd/mm/yyyy')
        button.btn.btn-primary(type='submit') Submit:
    
    if errors
        ul 
            for error in errors 
                li!=error.msg