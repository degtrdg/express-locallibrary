extends layout 

block content
     
     h1 #{title} : #{author.name} 
     
     p= author.lifespan 
     
     if books.length
         p Delete these books to be able to delete author
     
         ul 
             each book in books 
                 li #{book.title}
     else 
         p Are you sure you want to delete this author?
         form(method= 'POST' action='')

             input(type='hidden' name='authorid' value= author._id required= 'true')
             button.btn.btn-primary(type='submit') Delete
     
     